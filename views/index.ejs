<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List App</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="box" id="heading">
        <h1><%= kindofday %></h1>
    </div>
    <div class="box">
        
        <%for(var i = 0 ; i < item.length ; i++){%>
            <form action="/delete" method="post">
            <div class="item">
            <input type="checkbox" name="checkbox" value="<%= item[i]._id %>" onchange = "this.form.submit()">
            <p><%= item[i].name %></p>
            </div>
            <input type="hidden" name="itemName" value="<%= kindofday %>"></input>
            </form> 
        <%} %>
         
        <form class="item" action="/" method="post">
            <input type="text" name="itemName" placeholder="Enter items">
            <button type="submit" name="box" value="<%= kindofday %>">+</button>
        </form>
    </div>
</body>
</html>